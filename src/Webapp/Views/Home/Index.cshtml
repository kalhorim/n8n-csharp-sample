@{
    ViewData["Title"] = "Connect to n8n";
}

<div class="text-center">
    <h1 class="display-4">Response</h1>
</div>
<div class="card-columns">

    @foreach (var user in Webapp.Service.Data.users)
    {
        <div class="card p-3">
            <div class="card-header">@user.Name @user.LastName</div>
            <div class="card-body">
                <div class="form-group row">
                    <label for="text" class="col-4 col-form-label">Guest:</label>
                    <div class="col-8">
                        <label for="text" class="col-form-label">@user.IsGuest</label>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="text" class="col-4 col-form-label">Valid:</label>
                    <div class="col-8">
                        <label for="text" class="col-form-label">@user.IsValid</label>
                    </div>
                </div>
            </div>
        </div>
    }
</div>